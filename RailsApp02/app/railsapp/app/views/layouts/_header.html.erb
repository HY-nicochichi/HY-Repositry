<header>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-danger my-3 py-2">
    <a class="navbar-brand color-dark d-flex align-items-center" href="/">
      <%= image_tag("icon.png", size: "40x40") %>
      <b class="ml-2">RailsApp02</b>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#NavBarContent" aria-controls="NavBarContent" aria-expanded="false" aria-label="Toggle navigation">
      <%= image_tag("navbar-toggler-icon.png", size: "35x35") %>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="NavBarContent">
      <% if @user_info["login"] == true %>
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a type="button" class="nav-link mr-2" href="/users/<%= @user_info["id"] %>">
              "<B><%= @user_info["name"] %></B>" 様
            </a>
          </li>
          <li class="nav-item active">
            <%= link_to("ログアウト", logout_path(), class: "nav-link", data: {"turbo-method"=>"delete"}) %>
          </li>
        </ul>
      <% else %>
        <ul v-else class="navbar-nav">
          <li class="nav-item active">
            <a type="button" class="nav-link mr-2" href="/login">ログイン</a>
          </li>
          <li class="nav-item active">
            <a type="button" class="nav-link" href="/users/new">会員登録</a>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
