<% provide("title", "#{@param}の変更") %>

<% flash.each() do |type, message| %>
  <div class="alert alert-<%= type %>">
    <%= message %>
  </div>
<% end %>
  <h4>
    <b><%= @param %>の変更</b>
  </h4>
  <div class="col-sm-9 col-md-7 col-lg-5 border border-primary bg-light">
    <div class="row">
      <div class="col mt-3">
        <% if @param == "パスワード" %>
          <%= form_with(url: "/users/#{@user_info["id"]}", method: "patch") do |form| %>
            <%= form.hidden_field("param", value: @param, required: true) %>
            <div class="form-group">
              <label>
                現<%= @param %>
              </label>
              <%= form.password_field("現#{@param}", class: "form-control border border-primary", required: true) %>
            </div>
            <div class="form-group">
              <label>
                新<%= @param %>
              </label>
              <%= form.password_field("新#{@param}", class: "form-control border border-primary", required: true) %>
            </div>
            <div class="form-group">
              <label>
                新<%= @param %>(確認)
              </label>
              <%= form.password_field("新#{@param}(確認)", class: "form-control border border-primary", required: true) %>
            </div>
            <br>
            <div class="form-group">
              <%= form.submit("#{@param}更新", class: "btn btn-primary") %>
            </div>
          <% end %>
        <% else %>
          <%= form_with(url: "/users/#{@user_info["id"]}", method: "patch") do |form| %>
            <%= form.hidden_field("param", value: @param, required: true) %>
            <div class="form-group">
              <label>
                現<%= @param %>
              </label>
              <%= form.text_field("現#{@param}", class: "form-control border border-primary", required: true) %>
            </div>
            <div class="form-group">
              <label>
                新<%= @param %>
              </label>
              <%= form.text_field("新#{@param}", class: "form-control border border-primary", required: true) %>
            </div>
            <div class="form-group">
              <label>
                新<%= @param %>(確認)
              </label>
              <%= form.text_field("新#{@param}(確認)", class: "form-control border border-primary", required: true) %>
            </div>
            <br>
            <div class="form-group">
              <%= form.submit("#{@param}更新", class: "btn btn-primary") %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
