<% provide("title", "ログイン") %>

<% flash.each() do |type, message| %>
  <div class="alert alert-<%= type %>">
    <%= message %>
  </div>
<% end %>
<h4>
  <b>ログイン</b>
</h4>
<div class="col-sm-9 col-md-7 col-lg-5 border border-primary bg-light">
  <div class="row">
    <div class="col mt-3">
      <%= form_with(url: "/login", method: "post") do |form| %>
        <div class="form-group">
          <label>
            メールアドレス
          </label>
          <%= form.text_field("email", class: "form-control border border-primary", required: true) %>
        </div>
        <div class="form-group">
          <label>
            パスワード
          </label>
          <%= form.password_field("pass", class: "form-control border border-primary", required: true) %>
        </div>
        <br>
        <div class="form-group">
          <%= form.submit("ログイン", class: "btn btn-primary") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
